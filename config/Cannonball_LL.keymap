#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#define ZMK_POINTING_DEFAULT_SCRL_VAL 80
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/input_transform.h>

#define DEFAULT_WIN 0
#define DEFAULT_MAC 1
#define SCROLL 2


/ {
    /* Behaviors */
    behaviors {
        encoder_msc_down_up: encoder_msc_down_up {
            compatible = "zmk,behavior-sensor-rotate";
            label = "ENCODER_MSC_DOWN_UP";
            #sensor-binding-cells = <0>;
            bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;
            tap-ms = <20>;
        };
    // スクロール設定
    msc {
        acceleration-exponent = <0>;      // 0
        time-to-max-speed-ms = <0>;     // 300
        delay-ms = <0>;                   // 10
    };
    // エンコーダー：キー
    behaviors {
        rot_kp: sensor_rotate_kp {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&kp>, <&kp>;
        };
    };
    // エンコーダー：マウススクロール
    behaviors {
        rot_msc: sensor_rotate_msc {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            tap-ms = <20>;
            bindings = <&msc>, <&msc>;
        };
    };

    /* キーマップ */
    keymap {
        compatible = "zmk,keymap";

        // WINDOWS用
    	DEFAULT_WIN {
            bindings = <
                // Key
                &kp LA(RIGHT)   &kp ENTER   &kp DEL    &kp BSPC
                &mkp MB3   &kp LC(V) &kp LC(W)   &kp DEL
                &kp LA(LEFT)   &kp LC(X)    &kp F5  &kp RET
                // Mouse
                &mkp MB1 &mkp MB2
                // Stick
                &mkp MB3 &mo SCROLL &mo SCROLL &mo SCROLL
                // Lever
                &to DEFAULT_WIN &kp F11 &to DEFAULT_MAC
                &to DEFAULT_WIN &kp F12 &to DEFAULT_MAC
                // Side
                &kp F3 &mo DEFAULT_MAC &mo SCROLL &mo DEFAULT_MAC
                // Back
                &bt BT_SEL 0 &bt BT_SEL 1
    	    >;
            sensor-bindings = <&rot_kp LS(LC(TAB)) LC(TAB)>, <&encoder_msc_down_up>, <&rot_kp RIGHT LEFT>;
    	};

        // MacOS用
    	DEFAULT_MAC {
            bindings = <
                // Key
                &kp SPACE   &kp ENTER   &kp DEL    &kp BSPC
                &mkp MB3   &kp LC(V) &kp LG(N0)   &kp DEL
                &kp F2   &kp HOME    &kp END  &kp RET
                // Mouse
                &kp LG(C) &kp LG(V)
                // Stick
                &kp LS(LG(T)) &kp LS(LC(TAB)) &kp LG(W) &kp LC(TAB)
                // Lever
                &to DEFAULT_WIN &kp F11 &to DEFAULT_MAC
                &to DEFAULT_WIN &kp F12 &to DEFAULT_MAC
                // Side
                &kp F1 &kp F2 &kp F3 &kp F4
                // Back
                &bt BT_SEL 0 &bt BT_SEL 1
    	    >;
            sensor-bindings = <&rot_kp LG(Z) LS(LG(Z))>, <&rot_msc MOVE_DOWN MOVE_UP>, <&rot_kp LG(PLUS) LG(MINUS)>;
    	};

        // BT設定、スクロールレイヤー
        SETTINGS {
            bindings = <
                // Key
                &bt BT_SEL 1 &bt BT_SEL 4 &none &none
                &none &bt BT_SEL 3 &none &none
                &bt BT_SEL 0 &bt BT_SEL 2 &none &none
                // Mouse
                &none &none
                // Stick
                &none &none &none &none
                // Lever
                &none &none &none
                &none &none &none
                // Side
                &none &none &none &none
                // Back
                &bt BT_CLR_ALL &bt BT_CLR
    	    >;
            sensor-bindings = <&rot_kp LEFT RIGHT>, <&rot_msc MOVE_DOWN MOVE_UP>, <&rot_msc MOVE_LEFT MOVE_RIGHT>;
    	};
    };
};
